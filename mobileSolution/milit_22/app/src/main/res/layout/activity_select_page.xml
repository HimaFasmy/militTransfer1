<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".selectPage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Abt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/enDe"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/getstarted"
            android:fontFamily="@font/fira_code_bold"
            android:text="@string/encode"
            android:textAlignment="center"
            android:textColor="#F4F1F1" />

        <Button
            android:id="@+id/encode"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/getstarted"
            android:fontFamily="@font/fira_code_bold"
            android:text="@string/decode"
            android:textAlignment="center"
            android:textColor="#F4F1F1" />
    </LinearLayout>

    <Button
        android:id="@+id/Abt"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:background="@drawable/getstarted"
        android:fontFamily="@font/fira_code_bold"
        android:text="@string/aboutus"
        android:textAlignment="center"
        android:textColor="#E3D6D6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_code_bold"
        android:text="What are looking for ?"
        android:textColor="#ffffff"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />
</androidx.constraintlayout.widget.ConstraintLayout>